# Schwab Automated Trading System - Environment Variables
# Copy this file to .env and fill in your values

# Required: Schwab API Credentials
# Get these from https://developer.schwab.com after creating an app
SCHWAB_APP_KEY=your_app_key_here
SCHWAB_APP_SECRET=your_app_secret_here

# Required: Your Schwab account number
SCHWAB_ACCOUNT_NUMBER=12345678

# Callback URL (use this default for local development)
SCHWAB_CALLBACK_URL=https://127.0.0.1:8182

# Optional: Custom token storage path
# SCHWAB_TOKEN_PATH=./data/token.json

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
