# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Shell scripts
*.sh text eol=lf

# Configuration
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Data files
*.json text eol=lf
*.csv text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.pyc binary
*.pyo binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
